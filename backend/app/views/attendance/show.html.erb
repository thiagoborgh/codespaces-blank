<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Atendimento SOAP - Prontuário Eletrônico</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <style>
        <%= render 'soap_styles' %>
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Header -->
            <header class="col-12 p-3 bg-white border-bottom d-flex justify-content-between align-items-center fixed-top">
                <div class="d-flex align-items-center">
                    <button class="btn btn-outline-primary me-3" onclick="window.history.back()">
                        <i class="bi bi-arrow-left"></i> Voltar
                    </button>
                    <h1 class="h4 mb-0">Atendimento SOAP</h1>
                </div>
                <div class="d-flex align-items-center">
                    <span class="me-3"><%= current_user&.name || 'Profissional' %></span>
                    <img src="https://via.placeholder.com/40" alt="Usuário" class="profile-img">
                </div>
            </header>

            <!-- Patient Info -->
            <div class="col-12" style="margin-top: 80px;">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-2 text-center">
                                <img src="https://via.placeholder.com/120" alt="Paciente" class="patient-img">
                            </div>
                            <div class="col-md-10">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h3 class="mb-1"><%= @patient.name %></h3>
                                        <p class="text-muted mb-1">CPF: <%= format_cpf(@patient.cpf) %></p>
                                        <p class="text-muted mb-1">Nascimento: <%= format_date(@patient.birth_date) %></p>
                                        <p class="text-muted">Idade: <%= calculate_age(@patient.birth_date) %> anos</p>
                                        <div class="mt-2">
                                            <strong>Condições:</strong>
                                            <% @patient_problems.each do |problem| %>
                                                <span class="badge bg-success me-2"><%= problem.name %></span>
                                            <% end %>
                                        </div>
                                        <div class="mt-2">
                                            <strong>Alergias:</strong>
                                            <% @patient_allergies.each do |allergy| %>
                                                <span class="badge bg-warning me-2"><%= allergy.substance %></span>
                                            <% end %>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <p class="mb-1"><strong>Consulta:</strong> <%= format_datetime(@consultation.consultation_date) %></p>
                                        <p class="mb-1"><strong>Tipo:</strong> <%= @consultation.consultation_type.humanize %></p>
                                        <p class="mb-1"><strong>Status:</strong> 
                                            <span class="badge <%= badge_class_for_status(@consultation.status) %>">
                                                <%= @consultation.status.humanize %>
                                            </span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-md-9">
                <!-- SOAP Sections -->
                <div class="card">
                    <div class="card-header">
                        <h4 class="mb-0">Registro SOAP</h4>
                        <small class="text-muted">Subjetivo, Objetivo, Avaliação e Plano</small>
                    </div>
                    <div class="card-body">
                        
                        <!-- Subjetivo -->
                        <%= render 'soap_subjective' %>
                        
                        <!-- Objetivo -->
                        <%= render 'soap_objective' %>
                        
                        <!-- Avaliação -->
                        <%= render 'soap_assessment' %>
                        
                        <!-- Plano -->
                        <%= render 'soap_plan' %>
                        
                        <!-- Finalização -->
                        <%= render 'soap_finalization' %>
                        
                    </div>
                </div>
            </div>

            <!-- Sidebar - Timeline -->
            <div class="col-md-3">
                <div class="card sticky-top" style="top: 100px;">
                    <div class="card-header">
                        <h5 class="mb-0">Timeline do Atendimento</h5>
                    </div>
                    <div class="card-body timeline-container">
                        <ul class="timeline">
                            <% @timeline_events.each do |event| %>
                                <li>
                                    <span class="timeline-date"><%= time_ago_in_words(event[:date]) %> atrás</span>
                                    <strong><%= event[:title] %></strong>
                                    <% if event[:description].present? %>
                                        <br><small class="text-muted"><%= event[:description] %></small>
                                    <% end %>
                                    <span class="badge <%= event[:badge_class] %>"><%= event[:type].capitalize %></span>
                                </li>
                            <% end %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        <%= render 'soap_javascript' %>
    </script>
</body>
</html>
